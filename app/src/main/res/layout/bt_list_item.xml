<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="53dp"
    android:background="@color/bttendance_white">

    <View
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:id="@+id/attendance_selector"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/add_btn"
        android:gravity="center_vertical|left"
        android:clickable="false"
        android:focusable="false"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:text="Victoria An"
        android:textColor="@color/bttendance_silver"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title"
        android:layout_toLeftOf="@id/add_btn"
        android:gravity="center_vertical|left"
        android:clickable="false"
        android:focusable="false"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:text="CM140012"
        android:textColor="@color/bttendance_silver"
        android:textSize="12sp" />

    <ImageView
        android:id="@id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/grade_bg" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/add_btn"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:text="Tardy"
        android:textColor="@color/bttendance_silver"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="34dp"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:text="1"
        android:textColor="@color/bttendance_cyan"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/grade_total"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="2"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:paddingTop="12dp"
        android:textColor="@color/bttendance_white"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>