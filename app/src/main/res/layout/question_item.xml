<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:paddingBottom="7dp"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="7dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/question_option_guide"
        android:layout_alignParentTop="true"
        android:background="@drawable/bt_list_item_background"
        android:minHeight="88dp" />

    <RelativeLayout
        android:id="@+id/message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/choice"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:background="@drawable/clicker_start_multiple_selected" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="81dp"
            android:layout_marginTop="13dp"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:gravity="left|top"
            android:includeFontPadding="false"
            android:lineSpacingExtra="1dp"
            android:minHeight="75dp"
            android:paddingBottom="13dp"
            android:textColor="@color/bttendance_silver"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@id/question_option_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_layout"
        android:includeFontPadding="false"
        android:paddingBottom="11dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/bttendance_silver"
        android:textSize="12sp" />

    <View
        android:id="@+id/item_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/question_option_guide"
        android:layout_alignParentTop="true"
        android:background="@drawable/bt_list_item_selector"
        android:minHeight="88dp" />

</RelativeLayout>