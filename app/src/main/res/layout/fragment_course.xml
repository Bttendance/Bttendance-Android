<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bttendance_grey"
    android:orientation="vertical">

    <com.bttendance.view.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bttendance_white"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="@color/bttendance_navy"
        app:pstsIndicatorHeight="2.5dp"
        app:pstsShouldExpand="true"
        app:pstsTabBackground="@drawable/tabs_selector"
        app:pstsTabPaddingLeftRight="0dp"
        app:pstsUnderlineHeight="0dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>