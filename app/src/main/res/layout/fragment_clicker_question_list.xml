<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bttendance_grey"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:cacheColorHint="@color/bttendance_grey"
            android:divider="@null"
            android:listSelector="@android:color/transparent" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/add_question_bt"
            android:background="@drawable/bt_selector_cyan"
            android:text="@string/add_a_question"
            android:textSize="16sp"
            android:textColor="@color/bttendance_white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>