<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bttendance" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/bttendance_black</item>
        <item name="colorPrimary">@color/bttendance_navy</item>
        <item name="colorPrimaryDark">@color/bttendance_navy_darken</item>
        <item name="colorAccent">@color/bttendance_cyan</item>
        <item name="android:textColorPrimary">@color/bttendance_white</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.Bttendance.NoActionBar" parent="@style/Theme.Bttendance">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/bttendance_white</item>
    </style>

</resources>