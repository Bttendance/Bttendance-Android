<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bttendance" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/bttendance_grey</item>
        <item name="colorPrimary">@color/bttendance_navy</item>
        <item name="colorPrimaryDark">@color/bttendance_navy_darken</item>
        <item name="colorAccent">@color/bttendance_cyan</item>
        <item name="android:textColorPrimary">@color/bttendance_white</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.Bttendance.White.Background" parent="@style/Theme.Bttendance">
        <item name="android:windowBackground">@color/bttendance_white</item>
    </style>

    <style name="Theme.Bttendance.NoActionBar" parent="@style/Theme.Bttendance">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Bttendance.NoActionBar.Translucent" parent="Theme.Bttendance.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

</resources>