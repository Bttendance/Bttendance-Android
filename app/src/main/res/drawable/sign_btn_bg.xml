<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="1dp" android:color="@color/bttendance_navy"/>
            <solid android:color="@color/bttendance_grey"/>
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
		   	<stroke android:width="1dp" android:color="@color/bttendance_cyan"/>
    		<solid android:color="@color/bttendance_grey"/>
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
		   	<stroke android:width="1dp" android:color="@color/bttendance_silver_30"/>
    		<solid android:color="@color/bttendance_grey"/>
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>