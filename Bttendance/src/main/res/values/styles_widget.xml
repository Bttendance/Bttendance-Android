<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Sign In Up -->
    <style name="userInfoEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:hint">@string/username</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColorHint">@color/grey_hex_cc</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/grey_hex_33</item>
        <item name="android:inputType">text|textPersonName</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="signInUpButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/sign_btn_bg</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/bttendance_blue</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>