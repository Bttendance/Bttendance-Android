<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Sign In Up -->
    <style name="userInfoEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColorHint">@color/bttendance_silver</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/bttendance_black</item>
        <item name="android:inputType">text|textEmailAddress</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="userInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/bttendance_navy</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="catchPointButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/bttendance_white</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="studentConfirmButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/bttendance_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="signInUpButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/sign_btn_bg</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/bttendance_navy</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="itemTextView" parent="android:Widget.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/bttendance_silver</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">left|top</item>
        <item name="android:background">@null</item>
    </style>
</resources>