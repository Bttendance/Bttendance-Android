<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bttendance_white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:background="@color/bttendance_navy"
                    android:layout_alignParentTop="true"
                    android:text="@string/you_are_successfully_registered"
                    android:textColor="@color/bttendance_white"
                    android:textSize="28sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tips"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/header"
                    android:paddingTop="5dp"
                    android:text="@string/tips_for_bttendance"
                    android:textColor="@color/bttendance_navy"
                    android:textSize="18.5sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <RelativeLayout
                    android:id="@+id/first_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/tips">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="1dp"
                        android:includeFontPadding="false"
                        android:text="1"
                        android:textColor="@color/bttendance_navy"
                        android:textSize="49sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/first_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="82dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="9dp"
                        android:includeFontPadding="false"
                        android:text="@string/guide_attend_course_first_info"
                        android:lineSpacingExtra="7dp"
                        android:textColor="@color/bttendance_black"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/bttendance_navy"
                        android:layout_marginLeft="72dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="9dp"
                        android:includeFontPadding="false"
                        android:layout_alignTop="@id/first_info"
                        android:layout_alignBottom="@id/first_info" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/second_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/first_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="1dp"
                        android:includeFontPadding="false"
                        android:text="2"
                        android:textColor="@color/bttendance_navy"
                        android:textSize="49sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/second_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="82dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="9dp"
                        android:includeFontPadding="false"
                        android:text="@string/guide_attend_course_second_info"
                        android:lineSpacingExtra="7dp"
                        android:textColor="@color/bttendance_black"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/bttendance_navy"
                        android:layout_marginLeft="72dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="9dp"
                        android:includeFontPadding="false"
                        android:layout_alignTop="@id/second_info"
                        android:layout_alignBottom="@id/second_info" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/third_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/second_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="1dp"
                        android:includeFontPadding="false"
                        android:text="3"
                        android:textColor="@color/bttendance_navy"
                        android:textSize="49sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/third_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="82dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="9dp"
                        android:includeFontPadding="false"
                        android:text="@string/guide_attend_course_third_info"
                        android:lineSpacingExtra="7dp"
                        android:textColor="@color/bttendance_black"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/bttendance_navy"
                        android:layout_marginLeft="72dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="9dp"
                        android:includeFontPadding="false"
                        android:layout_alignTop="@id/third_info"
                        android:layout_alignBottom="@id/third_info" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/forth_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_below="@id/third_layout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="1dp"
                        android:includeFontPadding="false"
                        android:text="4"
                        android:textColor="@color/bttendance_navy"
                        android:textSize="49sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/forth_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="82dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="9dp"
                        android:includeFontPadding="false"
                        android:text="@string/guide_attend_course_forth_info"
                        android:lineSpacingExtra="7dp"
                        android:textColor="@color/bttendance_black"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/bttendance_navy"
                        android:layout_marginLeft="72dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="9dp"
                        android:includeFontPadding="false"
                        android:layout_alignTop="@id/forth_info"
                        android:layout_alignBottom="@id/forth_info" />

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:id="@+id/continue_bt"
            android:background="@drawable/bt_selector_cyan"
            android:text="@string/continue_"
            android:textSize="16sp"
            android:textColor="@color/bttendance_white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>