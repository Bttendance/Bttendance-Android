<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:background="@drawable/course_info_bg">

        <com.bttendance.view.Bttendance
            android:id="@+id/bttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            app:type="Big" />

        <TextView
            android:id="@+id/course_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@id/bttendance"
            android:textColor="@color/bttendance_silver"
            android:textSize="12sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/manager_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">

        <Button
            android:id="@+id/notice_bt"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/course_info_bt_1_bg"
            android:text="@string/notice"
            android:textColor="@color/bttendance_silver"
            android:textSize="12sp" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/grade_bt"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/course_info_bt_2_bg"
            android:text="@string/grade"
            android:textColor="@color/bttendance_silver"
            android:textSize="12sp" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/ta_bt"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/course_info_bt_3_bg"
            android:text="@string/ta"
            android:textColor="@color/bttendance_silver"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>