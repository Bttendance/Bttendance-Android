<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp">

        <View
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bt_list_item_background"
            android:minHeight="88dp" />

        <com.bttendance.view.Bttendance
            android:id="@+id/bttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            app:type="Small" />

        <View
            android:id="@+id/item_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bt_list_item_selector"
            android:minHeight="88dp" />

        <TextView
            android:id="@+id/title"
            style="@style/itemTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="81dp"
            android:layout_marginTop="18dp"
            android:clickable="false"
            android:focusable="false"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message"
            style="@style/itemTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="81dp"
            android:layout_marginTop="36dp"
            android:background="@null"
            android:clickable="false"
            android:focusable="false"
            android:lineSpacingExtra="1dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/manager_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/clicker_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/course_info_bt_1_bg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_clicker" />

        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/attendance_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/course_info_bt_2_bg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_attendance" />

        </RelativeLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/notice_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/course_info_bt_3_bg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_notice" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>