<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.bttendance"
    android:id="@+id/total_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black_hex_4"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60">

        <com.bttendance.view.BoundedLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bt_white_bg"
            android:orientation="vertical"
            app:bounded_width="360dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="16dip"
                    android:gravity="center_vertical|left"
                    android:minHeight="59dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="none"
                        android:singleLine="true"
                        android:textColor="@color/bttendance_cyan"
                        android:textSize="22sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bttendance_navy" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bttendance_silver"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edit"
                        style="@style/userInfoEditText"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="8dp"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/edit_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bttendance_cyan"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:visibility="gone" />
                </LinearLayout>

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="54dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/bttendance_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:background="@drawable/alert_btn_bg"
                        android:maxLines="2"
                        android:text="Cancel"
                        android:textColor="@color/bttendance_silver"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="1.5dp"
                        android:layout_height="54dp"
                        android:background="@color/bttendance_grey" />

                    <Button
                        android:id="@+id/confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:background="@drawable/alert_btn_bg"
                        android:maxLines="2"
                        android:text="Confirm"
                        android:textColor="@color/bttendance_silver"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </com.bttendance.view.BoundedLinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/padding_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40" />
</LinearLayout>