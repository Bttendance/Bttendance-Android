<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.utopia.bttendance"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Bttendance">

        <service android:name=".service.BTService" />

        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.sign.CatchPointActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.NoActionBar"/>

        <activity
            android:name=".activity.sign.SignInActivity"
            android:label="@string/log_in"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bttendance.Sign"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity
            android:name=".activity.sign.SignUpActivity"
            android:label="@string/sign_up"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bttendance.Sign"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity
            android:name=".activity.sign.PersionalizeActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.NoActionBar" />

        <activity
            android:name=".activity.sign.ProfessorSerial"
            android:clearTaskOnLaunch="true"
            android:label="@string/enter_serial"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bttendance.Sign"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity
            android:name=".activity.sign.StudentConfirm"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.NoActionBar" />

        <activity
            android:name=".activity.ProfessorActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bttendance" />

        <activity
            android:name=".activity.StudentActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bttendance" />

    </application>

</manifest>
