<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bttendance"
    android:versionCode="1"
    android:versionName="0.1">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.bttendance.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.bttendance.permission.C2D_MESSAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Bttendance">

        <service android:name="com.bttendance.service.BTService" />

        <activity
            android:name="com.bttendance.activity.SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.bttendance.activity.sign.CatchPointActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.NoActionBar" />

        <activity
            android:name="com.bttendance.activity.sign.SignInActivity"
            android:label="@string/log_in"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bttendance.Sign"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity
            android:name="com.bttendance.activity.sign.SignUpActivity"
            android:label="@string/sign_up"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bttendance.Sign"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity
            android:name="com.bttendance.activity.sign.PersionalizeActivity"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.NoActionBar" />

        <activity
            android:name="com.bttendance.activity.sign.ProfessorSerial"
            android:clearTaskOnLaunch="true"
            android:label="@string/enter_serial"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bttendance.Sign"
            android:windowSoftInputMode="stateAlwaysVisible" />

        <activity
            android:name="com.bttendance.activity.sign.StudentConfirm"
            android:clearTaskOnLaunch="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sherlock.NoActionBar" />

        <activity
            android:name="com.bttendance.activity.ProfessorActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bttendance" />

        <activity
            android:name="com.bttendance.activity.StudentActivity"
            android:clearTaskOnLaunch="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Bttendance" />

        <receiver
            android:name="com.bttendance.service.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.bttendance" />
            </intent-filter>
        </receiver>
        <service android:name="com.bttendance.service.GcmIntentService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>
